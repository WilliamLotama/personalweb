<html>
  <head>
    <title>HOME</title>
    <link rel="stylesheet" href="public/style.css" />
    <link rel="stylesheet" href="public/styleViewProject.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
      integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body style="background-color: rgba(216, 216, 216, 0.918)">
    <nav>
      <div class="nav-left mt-2">
        <img src="public/assets/logo.png" style="width: 40px" alt="logo" />

        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          {{#if isLogin}}
          <li>
            <a href="/myProject">My Project</a>
          </li>
           {{/if}}
        </ul>
      </div>

      <div class="nav-right">
        <div class="nav-auth">
          {{#if isLogin}}
            <a href="#">Hallo, {{user.name}}</a>
            <a href="/logout">Logout</a> 
          {{else}}
            <a href="/login" class="">LOGIN</a>
            <a href="/register">REGISTER</a>
          {{/if}}
        </div>

        <div class="nav-contact">
          <a href="/contact">Contact</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <section>
        <div class="section-left">
          <h2 style="color: bold">Welcome To My Hut</h2>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Eius
            aliquam eligendi officiis, dolor vitae unde veritatis perferendis,
            repellendus error magni nihil possimus repudiandae, fugit nam!
            Nostrum quibusdam eveniet hic incidunt!
          </p>

          <div class="contact">
            <a
              href="https://facebook.com"
              style="
                background-color: black;
                border-radius: 10px;
                color: white;
                text-decoration: none;
                padding: 5px;
                margin-right: 10px;
              "
            >
              contact
            </a>

            <a
              href="https://drive.google.com/file/d/1t8C0yMjmDCs5gfT43veqqodF9q6ftEJv/view?usp=sharing"
              style="text-decoration: none; color: black"
              target="_blank"
            >
              Download CV
              <i class="fa-solid fa-download"></i>
            </a>
          </div>

          <div class="social-media">
            <a
              href="https://www.linkedin.com/in/william-kurniawan-560742217/"
              style="text-decoration: none"
              target="_blank"
            >
              <img
                src="public/assets/linkedin.png"
                style="width: 30px; margin: 5px"
                alt=""
              />
            </a>

            <a
              href="https://github.com/WilliamLotama"
              style="text-decoration: none"
              target="_blank"
            >
              <img
                src="public/assets/github.png"
                style="width: 30px; margin: 5px"
              />
            </a>

            <a
              href="https://www.instagram.com/williamkurniawann/"
              style="text-decoration: none"
              target="_blank"
            >
              <img
                src="public/assets/instagram.png"
                style="width: 30px; margin: 5px"
                alt=""
              />
            </a>

            <a
              href="https://www.facebook.com/WilliamKurniawann/"
              style="text-decoration: none"
              target="_blank"
            >
              <img
                src="public/assets/facebook.png"
                style="width: 30px; margin: 5px"
                alt=""
              />
            </a>

            <a
              href="https://twitter.com"
              style="text-decoration: none"
              target="_blank"
            >
              <img
                src="public/assets/twitter.png"
                style="width: 30px; margin: 5px"
              />
            </a>
          </div>
        </div>

        <div class="section-right" style="text-align: center">
          <div
            style="
              border: 1px solid black;
              width: 350px;
              border-radius: 10px;
              box-shadow: 0px 0px 25px black;
            "
          >
            <img
              src="public/assets/profile.jpeg"
              alt="profile"
              width="100%"
              style="border-radius: 10px"
            />
            <h2>William Kurniawan</h2>
            <p style="color: grey">Fullstack Engginer</p>
          </div>
        </div>
      </section>
    </div>

    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        {{messages.success}}
      </div>
    {{/if}}
    <!-- Project View Card -->
    <div class="project-section" id="contents">
      <h1 style="text-align: center">My Project</h1>
      <div class="project-view" id="project-view">

        {{#each projects}}
          <div class="project-card">
            <!-- Untuk Image Tittle durasi  -->
            <img src="/uploads/{{this.image}}" id="image-card" />
            <a
              href="/viewProject/{{this.id}}"
              style="text-decoration: none; color: black"
            >
              <h3 id="tittle-card">{{this.name}}</h3>
            </a>
            <p class="durasi" id="durasi-card">Durasi : {{this.duration}} | {{this.author}}</p>

            <!-- Untuk Desc -->
            <p id="desc-card">
              {{this.description}}
            </p>

            <!-- Icon Code -->
            {{#each technologies}}
              <i class="{{this}}"></i>
            {{/each}}

            {{! <i class="fa-brands fa-js"></i>
                <i class="fa-brands fa-html5"></i>
                <i class="fa-brands fa-java"></i>
                <i class="fa-brands fa-android"></i>}}
            <div class="button-card">
              {{#if isLogin}}
              <a href="/edit-project/{{this.id}}">
                <button>Edit</button>
              </a>
              <a href="/delete-project/{{this.id}}">
                <button>Delete</button>
              </a>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  </body>
</html>