<!DOCTYPE html>
<html>
  <head>
    <title>ADD Project Page</title>

    {{!-- <script src="project.js"></script> --}}

    <link rel="stylesheet" href="public/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
      integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
     <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: gainsboro">
    <nav>
      <div class="nav-left">
        <img src="public/assets/logo.png" style="width: 40px" alt="logo" />

        <ul>
          <li>
            <a href="/">Home</a>
          </li>
        </ul>
      </div>
      <div class="nav-right">
         <div class="nav-auth">
          {{#if isLogin}}
            <a href="#">Hallo, {{user.name}}</a>
            <a href="/logout">Logout</a> 
          {{else}}
            <a href="/login" class="">LOGIN</a>
            <a href="/register">REGISTER</a>
          {{/if}}
        </div>

        <div class="nav-contact">
        <a href="/contact">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Form Input New Project -->
    {{!--  onsubmit="addProject(event) = untuk JS  --}}
    <form class="form-input"  method="POST" action="/register" >
        <h2 style="text-align: center">REGISTER</h2>
       
        {{#if messages.danger}}
              <div class="alert alert-danger" role="alert">
                {{messages.danger}}
              </div>
            {{/if}}
              {{#if messages.success}}
              <div class="alert alert-success" role="alert">
                {{messages.success}}
              </div>
            {{/if}}

      <div>
        <label style="font-weight: bold; font-size: 20px" for="inputName"
          >Name</label
        >
        <input type="text" id="inputName" name="inputName"/>
      </div>

      
      <div>
        <label style="font-weight: bold; font-size: 20px" for="input-tittle"
          >Email</label
        >
        <input type="email" id="inputTittle" name="inputEmail"/>
      </div>

      
      <div>
        <label style="font-weight: bold; font-size: 20px" for="inputPassword"
          >Password</label
        >
        <input type="password" id="inputPassword" name="inputPassword"/>
      </div>  
      <button style="cursor:pointer" type="submit" >Register</button>
    </form>
    <!-- End Of New Project Input -->

  </body>
</html>
